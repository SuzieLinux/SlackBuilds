set -eu
cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=Intel-Linux-Processor-Microcode-Data-Files
PKGNAM=intel-microcode
VERSION=20241112
BUILD=${BUILD:-1}
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PKGNAM
OUTPUT=${OUTPUT:-/tmp}

DOCFILES="license release* *.md"

ARCH=noarch

# If the variable PRINT_PACKAGE_NAME is set, then this script will report what
# the name of the created package would be, and then exit. This information
# could be useful to other scripts.
if [ ! -z "${PRINT_PACKAGE_NAME:-""}" ]; then
  echo "$PKGNAM-$VERSION-$ARCH-$BUILD.txz "
  exit 0
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-microcode-$VERSION
tar xvf $CWD/$PRGNAM-microcode-$VERSION.tar.gz || tar xvf $CWD/microcode-$VERSION.tar.gz
cd $PRGNAM-microcode-$VERSION

chown -R root:root .
find -L . \
  \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 -o -perm 511 \) \
  -exec chmod 755 {} \; -o \
  \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
  -exec chmod 644 {} \;

rm -f intel-ucode{,-with-caveats}/list

install -Dm644 intel-ucode/* -t $PKG/lib/firmware/intel-ucode
install -Dm644 intel-ucode-with-caveats/* -t $PKG/lib/firmware/intel-ucode-with-caveats

rm -f intel-ucode{,-with-caveats}/list
iucode_tool --write-earlyfw=intel-ucode.cpio intel-ucode{,-with-caveats}/
install -Dm644 intel-ucode.cpio $PKG/boot/intel-ucode.cpio

mkdir -p $PKG/usr/doc/$PKGNAM-$VERSION
cp -a $DOCFILES $PKG/usr/doc/$PKGNAM-$VERSION || true
cat $CWD/$PKGNAM.SlackBuild > $PKG/usr/doc/$PKGNAM-$VERSION/$PKGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
if [ -e $CWD/slack-required ]; then
  cat $CWD/slack-required > $PKG/install/slack-required
fi
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PKGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
